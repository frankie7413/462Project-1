doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(name='description', content='')
    meta(name='author', content='')
    title Welcome2
    // Bootstrap Core CSS
    link(href='css/bootstrap.min.css', rel='stylesheet')
    // Custom CSS
    link(href='css/grayscale.css', rel='stylesheet')
    // Custom Fonts
    link(href='font-awesome/css/font-awesome.min.css', rel='stylesheet', type='text/css')
    link(href='http://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic', rel='stylesheet', type='text/css')
    link(href='http://fonts.googleapis.com/css?family=Montserrat:400,700', rel='stylesheet', type='text/css')
    // HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries
    // WARNING: Respond.js doesn't work if you view the page via file://
    //
      if lt IE 9
      script(src='https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js')
      script(src='https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js')
  body#page-top(data-spy='scroll', data-target='.navbar-fixed-top')
    // Navigation
    nav.navbar.navbar-custom.navbar-fixed-top(role='navigation')
      .container
        .navbar-header
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-main-collapse')
            i.fa.fa-bars
          a.navbar-brand.page-scroll(href='#page-top')
            i.fa.fa-play-circle
            span.light Start
            |  Bootstrap
        // Collect the nav links, forms, and other content for toggling
        .collapse.navbar-collapse.navbar-right.navbar-main-collapse
          ul.nav.navbar-nav
            // Hidden li included to remove active class from about link when scrolled up past about section
            li.hidden
              a(href='#page-top')
            li
              a.page-scroll(href='#SignUp') Sign Up
            li
              a.page-scroll(href='#vip') VIP
            li
              a.page-scroll(href='#forgotpassword') Forgot Password
        // /.navbar-collapse
      // /.container
    // Intro Header
    header.intro
      .intro-body
        .container
          .row
            .col-md-8.col-md-offset-2
              h1.brand-heading Welcome2
              h3  Log In 
              section.login
                input#logEmail(type='text', placeholder='Username')
                input#logPassword(type='password', placeholder='Password')
                input#logButton.btn.btn-success.btn-sm(type='submit', value='Sign In')
                p#logMessage
                .remember-forgot
    // Sign up Section
    section#SignUp.content-section.text-center
      .container
        .row
          .col-lg-8.col-lg-offset-2
            h2.section-heading Sign Up!
            hr.light
            #submitForm
              p#fnameText First Name 
              input#fname.form-control(type='text', placeholder='First Name')
              p#lnameText Last Name 
              input#lname.form-control(type='text', placeholder='Last Name')
              p#emailText Username 
              input#email.form-control(type='text', placeholder='')
              p#passwordText Password 
              input#password.form-control(type='password', name='Password', placeholder='Must be 8 characters, contain 1 digit & 1 letter')
              p#repasswordText Retype-Password 
              input#passwordType.form-control(type='password', name='Password', placeholder='Must be 8 characters, contain 1 digit & 1 letter')
              p#fillSection
              p#secretAnswerText Secret Question 
              select#secretAnswerList
                option(value='favoriteartist') Who's your favorite artist?
                option(value='cityborn') In what city were you born?
                option(value='firstcar') What model was your first car?
              input#secretAnswer.form-control(type='text', name='secretAnswer', placeholder='One word only, must be at least 4 characters')
              br
              input#signButton.btn.btn-success.btn-sm(type='button', name='button', value='submit')
      br
      br
      br
      p.brand-heading
      h3 Are you an important person?
      p
      p
      h4 Click here
      p
      a.btn.btn-circle.page-scroll(href='#vip')
        i.fa.fa-angle-double-down.animated
    // Download Section
    section#vip.content-section.text-center
      .container
        .row
          .col-lg-8.col-lg-offset-2
            h2.section-heading  VIP Sign Up
            p
              | If you would like an account with higher permissions please fill this out and we will be in touch!
            hr.light
            #submitForm
              p#fnameText1 First Name 
              input#fname1.form-control(type='text', placeholder='First Name')
              p#lnameText1 Last Name 
              input#lname1.form-control(type='text', placeholder='Last Name')
              p#occupationText Occupation
              input#occupation.form-control(type='text', placeholder='e.g. Professor, Administrator')
              p#emailText1 Username 
              input#email1.form-control(type='text', placeholder='')
              p#passwordText1 Password 
              input#password1.form-control(type='password', name='Password', placeholder='Must be 8 characters, contain 1 digit & 1 letter')
              p#repasswordText1 Retype-Password 
              input#passwordType1.form-control(type='password', name='Password', placeholder='Must be 8 characters, contain 1 digit & 1 letter')
              p#secretAnswerText1 Secret Question 
              select#secretAnswerList1
                option(value='sA1') Who's your favorite artist?
                option(value='sA2') In what city were you born?
                option(value='sA3') What model was your first car?
              input#secretAnswer1.form-control(type='text', name='secretAnswer1', placeholder='One word only, must be at least 4 characters ')
              br
              input#vipsignButton.btn.btn-success.btn-sm(type='button', name='button', value='submit')
              p#fillSection
    // Forgot password Section
    section#forgotpassword.container.content-section.text-center
      .row
        .col-lg-8.col-lg-offset-2
          h2 Forgot Password?
          p If your answer checks out then your new password will be set.
          p#forgotUserText Username 
          input#forgotUser.form-control(type='text', placeholder='')
          p#forgotsecretAnswerText Secret Question 
          select#forgotsecretAnswerList.btn.btn-default.btn-lg
            option(value='sA1') Who's your favorite artist?
            option(value='sA2') In what city were you born?
            option(value='sA3') What model was your first car?
          input#forgotsecretAnswer.form-control(type='text', name='secretAnswer', placeholder='One word only, must be at least 4 characters ')
          p#forgotnewpasswordText New Password 
          input#forgotnewpassword.form-control(type='password', name='Password', placeholder='Must be 8 characters, contain 1 digit & 1 letter')
          input#forgotPassword.btn.btn-success.btn-sm(type='button', name='button', value='submit')
    // Map Section
    #map
    // jQuery
    script(src='javascripts/jquery.js')
    // Bootstrap Core JavaScript
    script(src='javascripts/bootstrap.min.js')
    // Plugin JavaScript
    script(src='javascripts/jquery.easing.min.js')
    // Custom Theme JavaScript
    script(src='javascripts/grayscale.js')
    script(src='javascripts/appProf.js')
